generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  
}


model Movies {
    id             Int      @id @default(autoincrement())
    Title          String
    Year           String
    Rated          String
    Released       String
    Runtime        String
    Genre          String
    Director       String
    Writer         String
    Actors         String
    Plot           String
    Language       String
    Country        String
    Awards         String
    Poster         String
    Metascore      String
    imdbRating     String
    imdbVotes      String
    imdbID         String   @unique
    Type           String
    Response       String
    Images         String[]
}